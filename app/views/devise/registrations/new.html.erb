<%= stylesheet_link_tag "sign_up" %>
<div class="sign-up-cont">
  <div class="hero">
    <%= link_to root_path do %>
      <%= image_tag "arrow.png", class: "nav-icon" %>
    <% end %>
    <h3>Register</h3>
    <div class="circle">
      <input type="submit" value="Next" form="new_user">
    </div>
  </div>

  <div class="close">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= image_tag "avatar.jpg", class: "avatar" %>
      <h3>Register</h3>

      <div class="form-group">
        <%= f.text_field :name, placeholder: "Full name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder: "Email",
                      class: "form-control",
                      required: true %>
      </div>

      <div class="form-group" id="int">
        <% if @minimum_password_length %>
        <% end %><br/>
        <%= f.password_field :password,
                         autocomplete: "new-password",
                         placeholder: "Password",
                         class: "form-control",
                         required: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         placeholder: "Confirm Password",
                         class: "form-control",
                         required: true %>
      </div>
    <% end %>
  </div>
  <div class="r-btn">
    <input type="submit" value="Signup" form="new_user">
  </div>
</div>
